<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="#9AFFFFFF"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9AFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="923dp"
            android:layout_height="230dp"
            android:backgroundTint="#A6FFFFFF">

            <ImageView
                android:id="@+id/DefaultImage"
                android:layout_width="223dp"
                android:layout_height="230dp"
                android:contentDescription="@string/fryingpan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cardforkspoonicon" />

            <TextView
                android:id="@+id/recipe_name"
                style="@style/cardStyle"
                android:layout_width="436dp"
                android:layout_height="99dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/title"
                android:textSize="@dimen/largeressz"
                app:layout_constraintStart_toEndOf="@+id/DefaultImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                style="@style/cardStyle"
                android:layout_width="622dp"
                android:layout_height="63dp"
                android:layout_marginStart="20dp"
                android:text="@string/made_by_yours_truly"
                android:textSize="@dimen/splg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/DefaultImage" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>